<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Driver_Activity.Dashboard">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@drawable/forgotpassword_back">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="Close"
            android:scaleType="fitXY"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="D A S H B O A R D"
            android:gravity="center_vertical"
            android:paddingLeft="19sp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/white"/>

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="9dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

              <de.hdodenhof.circleimageview.CircleImageView
                  android:layout_width="150dp"
                  android:layout_height="150dp"
                  android:layout_gravity="center"
                  android:id="@+id/profileImage"
                  android:layout_marginBottom="15dp"
                  app:civ_border_color="@color/colorPrimaryDark"
                  app:civ_border_width="1dp"
                  android:src="@drawable/ic_launcher_background"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:textSize="18sp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@drawable/top_bottom_line"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Name"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/name"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="1"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@drawable/bottom_line"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Email"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/email"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="1"/>

                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@drawable/bottom_line"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Mobile"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:id="@+id/mobile"
                            android:text=""
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="1"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@drawable/bottom_line"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="CNIC"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:id="@+id/cnic"
                            android:text=""
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="1"/>

                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@drawable/bottom_line"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Join Date"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text=""
                            android:id="@+id/date"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="1"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@drawable/bottom_line"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Car Type"
                            android:textStyle="bold"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text=""
                            android:id="@+id/carType"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="1"/>

                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@drawable/bottom_line"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Balance"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text=""
                            android:id="@+id/balance"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="1"/>

                    </TableRow>


                </TableLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Rating Details"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Completion Rate"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="0dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/completeTextview"
                        android:gravity="center"
                        android:text=""
                        android:textSize="15dp"
                        android:textColor="#4CAF50"
                        android:layout_marginBottom="0dp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <ProgressBar
                    android:id="@+id/complete"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:progressTint="#4CAF50"
                    android:progress="1"
                    android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Acceptance Rate"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:textColor="#FFC107"
                    android:layout_marginBottom="0dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/acceptTextview"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:textColor="#FFC107"
                    android:layout_marginBottom="0dp"
                    android:textStyle="bold"/>

            </LinearLayout>

                <ProgressBar
                    android:id="@+id/accept"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:progressTint="#FFC107"
                    android:progress="1"
                    android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rejection Rate"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp"
                    android:textColor="#FF5722"
                    android:layout_marginBottom="0dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/rejectTextview"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:textColor="#FF5722"
                    android:layout_marginBottom="0dp"
                    android:textStyle="bold"/>

            </LinearLayout>


                <ProgressBar
                    android:id="@+id/reject"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:progressTint="#FF5722"
                    android:layout_marginBottom="20sp"
                    android:progress="1"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>