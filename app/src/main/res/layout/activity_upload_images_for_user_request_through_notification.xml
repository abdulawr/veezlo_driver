<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Driver_Activity.UploadImagesForUserRequestThroughNotification">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Capture images"
                android:textColor="@color/text"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:background="#41F0F6F0"
                android:src="@drawable/upload"
                android:id="@+id/firstImage"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/uploadedimagesLinearyLayout"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/forgotpassword_back"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Upload"
                android:id="@+id/upload"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15sp"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>