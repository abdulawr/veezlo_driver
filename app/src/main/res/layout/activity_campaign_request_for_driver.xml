<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Driver_Activity.CampaignRequestForDriver">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/title"
        android:background="@drawable/new_login_screen_back"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalKilometer"
        android:layout_below="@id/title"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:text=""/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalKilometer"
        android:paddingLeft="15dp"
        android:id="@+id/description"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"
        android:justificationMode="inter_word"
        android:textSize="18dp"
        android:text="You have to complete the above KMs in order to complete this campaign. You will not be able to receive any campaign request until you complete this campaign."/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/description"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:src="@drawable/carback" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20sp"
      android:layout_alignParentBottom="true"
      android:layout_marginRight="20sp"
      android:orientation="vertical">

      <Button
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="Accept"
          android:onClick="AcceptCampaign"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:background="@drawable/accept_button_back"/>

      <Button
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="Decline"
          android:onClick="DeclineButtonClick"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:layout_marginTop="15dp"
          android:background="@drawable/new_login_screen_back"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_marginTop="20sp"
          android:layout_marginBottom="10dp"
          android:layout_height="wrap_content"
          android:text="Accepting requests can increase your future campaign opportunities and improve your ratings."
          android:textSize="18dp"
          android:gravity="center"/>


  </LinearLayout>

</RelativeLayout>