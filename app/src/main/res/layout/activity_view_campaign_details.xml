<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Driver_Activity.ViewCampaignDetails">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/imagesLinearyout"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You have 10 hours to complete installation"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:id="@+id/timertextview"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Campaign Details"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:textSize="18sp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:background="@drawable/top_bottom_line"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="ID"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:textSize="17sp"
                        android:layout_weight="0"/>

                    <TextView
                        android:layout_width="0.6dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:background="@color/colorPrimaryDark"
                        android:layout_weight="0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/id"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text"
                        android:textSize="17sp"
                        android:layout_weight="1"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:background="@drawable/bottom_line"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Status"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:textSize="17sp"
                        android:layout_weight="0"/>

                    <TextView
                        android:layout_width="0.6dp"
                        android:layout_height="match_parent"
                        android:text="|"
                        android:background="@color/colorPrimaryDark"
                        android:layout_weight="0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/status"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/text"
                        android:textSize="17sp"
                        android:layout_weight="1"/>

                </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@drawable/bottom_line"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="Name"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/name"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="1"/>

                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:background="@drawable/bottom_line"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="Total KM"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="0.6dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="0"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/totalKilometer"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/text"
                            android:textSize="17sp"
                            android:layout_weight="1"/>

                    </TableRow>

                </TableLayout>

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Start Campaign"
                android:textSize="18sp"
                android:onClick="StartCampaignButtonClick"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="bottom"
                android:layout_weight="0"
                android:background="#4CAF50"/>


        </LinearLayout>

    </ScrollView>


        </androidx.cardview.widget.CardView>

</LinearLayout>